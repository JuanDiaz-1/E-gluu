<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/texview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="106dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="282dp"
        android:text="@string/del_txtview"
        android:textAlignment="center"
        android:textSize="25sp"></TextView>

    <EditText
        android:id="@+id/edce"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="106dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="220dp"
        android:hint="@string/del_hintcode"></EditText>

    <Button
        android:id="@+id/btnep"
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="119dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="20dp"
        android:text="@string/del_btnelim"></Button>

    <Button
        android:id="@+id/btn_bar"
        android:layout_width="211dp"
        android:layout_height="74dp"
        android:layout_above="@+id/btnep"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="18dp"
        android:text="@string/scan_btn"
        app:icon="@drawable/ic_baseline_camera_alt_24" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/texview1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="430dp"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="279dp"
        app:srcCompat="@drawable/ic_delete" />

</RelativeLayout>