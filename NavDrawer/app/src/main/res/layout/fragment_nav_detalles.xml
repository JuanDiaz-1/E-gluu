<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav_detalles">

    <EditText
        android:id="@+id/buscarcodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="93dp"
        android:ems="10"
        android:hint="Ingresa codigo del producto"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editnombreproducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buscarcodigo"
        android:layout_marginBottom="343dp"
        android:hint=""
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editdetallesproducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buscarcodigo"
        android:layout_marginBottom="335dp"
        android:hint=""
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editdpreciocompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buscarcodigo"
        android:layout_marginBottom="287dp"
        android:hint=""
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editdprecioventa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buscarcodigo"
        android:layout_marginBottom="242dp"
        android:hint=""
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editstock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buscarcodigo"
        android:layout_marginBottom="183dp"
        android:hint=""
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="219dp"
        android:text="Actualizar producto" />

    <Button
        android:id="@+id/butonbuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="44dp"
        android:text="Buscar" />

    <TextView
        android:id="@+id/Datos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buscarcodigo"
        android:layout_marginBottom="396dp"
        android:text="Aqui aparecerÃ¡ el texto "
        android:textSize="24sp" />

</RelativeLayout>